from random import *
y = 1000
while y > 0:
   a,d = map(int,input("Поставьте ставку и число на которое ставите от 0 до 99 \n").split(" "))
   chi = randint(0,99)
   if chi <= 5:
      print("Выпало зелёное")
   elif chi > 5 and chi < 52:
      print("Выпало чёрное", chi)
   else:
      print("Выпало красное", chi)
   if chi == d:
      q = a * 5
      y = y - a
      y = y + q
      print("Вам выпало точное число, ваша ставка умножена в 5 раз! Теперь у вас:", y)
   elif 5 < chi < 53 and 5 < d < 53:
      q = a * 2
      y = y - a
      y = y + q
      print("Вам выпало чёрное, ваша ставка умножена в 2 раза! Теперь у вас:", y)
   elif 52 < chi < 100 and 52 < d < 100:
      q = a * 2
      y = y - a
      y = y + q
      print("Вам выпало красное, ваша ставка умножена в 2 раза! Теперь у вас:", y)
   elif 6 > chi and 6 > d:
      q = a * 4
      y = y - a
      y = y + q
      print("Вам выпало зелёное, ваша ставка умножена в 4 раза! Теперь у вас:", y)
   else:
      y = y - a
      print("Вы проиграли, теперь у вас:", y)
print("У вас кончился капитал, начните заного")
